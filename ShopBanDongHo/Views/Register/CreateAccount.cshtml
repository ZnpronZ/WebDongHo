@model ShopBanDongHo.Models.RegisterModel
@using CaptchaMvc.HtmlHelpers;

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create Account</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Assets/RegisterLayout/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/RegisterLayout/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #999999;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="limiter">
            <div class="container-login100">
                <div class="login100-more" style="background-image: url('../Assets/RegisterLayout/images/bg-01.jpg');"></div>

                <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-59">
                            Create Account
                        </span>
                        <div class="wrap-input100 validate-input" data-validate="Username is required">
                            <span class="label-input100">User Name</span>
                            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "username", @placeholder = "Username..." } })

                            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "tex-danger" })
                            @{
                                var loi = "";
                                if (ViewBag.TaiKhoan != null)
                                {
                                    loi = ViewBag.TaiKhoan;
                                }

                            }
                            <p style="color:red">@loi</p>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <span class="label-input100">Password</span>
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "input100", @type = "password", @name = "pass", @placeholder = "*************" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Repeat Password is required">
                            <span class="label-input100">Repeat Password</span>
                            @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "input100", @type = "password", @name = "repeat-pass", @placeholder = "*************" } })
                            @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Fullname is required">
                            <span class="label-input100">Full Name</span>
                            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "name", @placeholder = "Fullname..." } })
                            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                        </div>


                        <div class="wrap-input100 validate-input">
                            <span class="label-input100">Sex</span>
                            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "sex", @placeholder = "Sex..." } })
                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                            @{
                                var loigt = "";
                                if (ViewBag.GT != null)
                                {
                                    loigt = ViewBag.GT;
                                }

                            }
                            <p style="color:red">@loigt</p>
                            <span class="focus-input100"></span>
                        </div>


                        <div class="wrap-input100 validate-input">
                            <span class="label-input100">Address</span>
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "address", @placeholder = "Address..." } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input">
                            <span class="label-input100">Birth Day</span>
                            <input type="date" name="Date" placeholder="Birthday....." class="input100" />
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <span class="label-input100">Email</span>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "email", @placeholder = "Email addess..." } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input">
                            <span class="label-input100">Phone Number</span>
                            @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "input100", @type = "text", @name = "phone", @placeholder = "Phone....." } })
                            @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">

                                @Html.Captcha(5)
                                <br />
                                @ViewBag.error


                            </div>
                        </div>

                        <div class="flex-m w-full p-b-33">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    <span class="txt1">
                                        I agree to the
                                        <a href="#" class="txt2 hov1">
                                            Terms of User
                                        </a>
                                    </span>
                                </label>
                            </div>


                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    Create
                                </button>
                            </div>

                            <a href="@Url.Action("Login","Login")" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                                Sign in
                                <i class="fa fa-long-arrow-right m-l-5"></i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    <script src='http://codepen.io/assets/libs/fullpage/jquery_and_jqueryui.js'></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Assets/RegisterLayout/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Assets/RegisterLayout/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/RegisterLayout/js/main.js"></script>

</body>
</html>