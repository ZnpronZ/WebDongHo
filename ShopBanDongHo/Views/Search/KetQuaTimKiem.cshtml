
@using ShopBanDongHo.Models;


@model List<ChiTietDongHo>
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<!--about-end-->
<!--product-starts-->
<div class="product">
    <div class="container">
        <div class="product-top">
            <div class="product-one">


                @{
                    int i = 0;

                    foreach (var item in Model)
                    {
                        i++;
                        <div class="col-md-3 product-left">
                            <div class="product-main simpleCart_shelfItem">

                                <a href="@Url.Action("ChiTietSP","Product",new { @MaSP=item.MaSP})" class="mask"><img class="img-responsive zoom-img" src=@Url.Content("~/Assets/images/" + item.Anh) alt="" /></a>
                                <div class="product-bottom">
                                    <h3>@item.TenSP</h3>
                                    <p>Explore Now</p>
                                    <h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">@item.Gia USD</span></h4>
                                </div>
                                <div class="srch">
                                    <span>-50%</span>
                                </div>
                            </div>
                        </div>
                    }
                }


                <div class="clearfix"></div>
            </div>

            <div class="product-one">

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>




