 @model List<ShopBanDongHo.ModelData.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

}
@section jsFooter{
    <script src="~/Scripts/CartController.js"></script>
}
@if (Model != null)
{
    <div style="margin-top:100px; margin-bottom:60px">
        <table class="table">
            <thead>
                <tr>
                    <td>Mã Sản Phẩm</td>
                    <td>Tên Sản Phẩm</td>
                    <td>Ảnh Sản Phẩm</td>
                    <td>Số Lượng</td>
                    <td>Đơn Giá</td>
                    <td>Thành Tiền</td>
                    <td></td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.chitietdongho.MaSP</td>
                        <td>@item.chitietdongho.TenSP</td>
                        <td><img src=@Url.Content("~/Assets/images/" + item.chitietdongho.Anh) width="100" /></td>
                        <td><input type="number" class="txtQuantity" data-id="@item.chitietdongho.MaSP" value="@item.SoLuong" style="width:60px;"/></td>
                        <td>@item.chitietdongho.Gia</td>
                        <td>@(item.chitietdongho.Gia * item.SoLuong)</td>
                        <td><a href="#" data-id="@item.chitietdongho.MaSP" class="btn-delete">Xóa</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
        <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
        <button id="btnDelete" class="btn">Xóa giỏ hàng</button>
        <button id="btnPayment" class="btn">Thanh Toán</button>
    </div>
}
else
{

    <div style="text-align:center; margin-top:100px; margin-bottom:30px">
        <span class="alert alert-danger" style="text-align:center"> Chưa có sản phẩm nào trong giỏ hàng</span>

    </div>
    <div style="text-align:center; margin-bottom:30px">
        <button onclick="window.location.href='@Url.Action("Index","Product")'">Mua hàng</button>
    </div>
}

