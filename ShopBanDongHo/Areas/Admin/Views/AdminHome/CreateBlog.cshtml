
@{
    ViewBag.Title = "CreateBlog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Assets/BlogAdminLayout/fonts/icomoon/style.css">


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Assets/BlogAdminLayout/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/Assets/BlogAdminLayout/css/style.css">

    <title>Contact Form #6</title>
</head>
<body>
    <br />
    <br />
    <div class="content">

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">


                    <div class="row justify-content-center">
                        <div class="col-md-6">

                            <h3 class="heading mb-4">Let's talk about everything!</h3>

                            <p><img src="~/Assets/BlogAdminLayout/images/undraw-contact.svg" alt="Image" class="img-fluid"></p>


                        </div>
                        <div class="col-md-6">

                            @using (Html.BeginForm("CreateBlog", "AdminHome", FormMethod.Post, new { @class = "mb-5", @id = "contactForm", @name = "contactForm" }))
                            {
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="text" class="form-control" name="TieuDe" id="name" placeholder="Tiêu đề">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="text" class="form-control" name="TenNgPost" id="email" placeholder="Người đăng">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="file" class="form-control" name="AnhBlog" placeholder="Ảnh dưới 50 ký tự">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="file" class="form-control" name="AnhBlogNho" id="subject" placeholder="Ảnh dưới 50 ký tự">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <textarea name="NoiDung" class="form-control" id="message" cols="30" rows="7" placeholder="Nhập nội dung"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <input type="submit" value="Create Blog" class="btn btn-primary rounded-0 py-2 px-4">
                                        <span class="submitting"></span>
                                    </div>
                                </div>
                            }

                            <div id="form-message-warning mt-4"></div>
                            <div id="form-message-success">
                                Your message was sent, thank you!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



    <script src="~/Assets/BlogAdminLayout/js/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/BlogAdminLayout/js/popper.min.js"></script>
    <script src="~/Assets/BlogAdminLayout/js/bootstrap.min.js"></script>
    <script src="~/Assets/BlogAdminLayout/js/jquery.validate.min.js"></script>
    <script src="~/Assets/BlogAdminLayout/js/main.js"></script>

</body>
</html>